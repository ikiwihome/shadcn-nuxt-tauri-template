{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "shadcn-nuxt-tauri-template",
  "version": "1.0.0",
  "identifier": "com.template.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "nuxt-app",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "../public/favicon.png",
      "../public/favicon.ico"
    ]
  }
}
